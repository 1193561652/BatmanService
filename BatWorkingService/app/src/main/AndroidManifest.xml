<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.batservice">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:excludeFromRecents="true"
        android:theme="@style/AppTheme">
<!--        android:persistent="true"-->
        <activity android:name=".MainActivity"
            >
<!--            android:excludeFromRecents="true"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service
            android:name="com.example.batservice.WorkingService"
            android:label="WorkingService"
            android:priority="1000"
            android:exported="true"
            android:enabled="true"
            android:process=":remote"
            >
<!--            android:process=":remote"-->
            <!--            android:process=":remoteProcess"-->
            <intent-filter>
                <action android:name="com.example.batservice.WorkingService" />
            </intent-filter>
        </service>

        <receiver android:name="com.example.batservice.ReqWorkingRevicer" >
        </receiver>

    </application>

</manifest>